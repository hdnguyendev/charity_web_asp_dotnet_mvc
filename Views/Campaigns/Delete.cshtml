@model DonationsWeb.Models.Campaign

@{
    ViewData["Title"] = "Delete Campaign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Campaign</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-danger ">
            <h4 class="mb-0 text-white">Are you sure you want to delete this campaign?</h4>
        </div>
        <div class="card-body">
            <h4>Campaign Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-10">
                    <textarea class="form-control" id="editor" readonly>@Model.Description</textarea>
                </dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.StartDate)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EndDate)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.EndDate)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Goal)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Goal)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CurrentAmount)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CurrentAmount)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Image)</dt>
                <dd class="col-sm-10">
                    <img src="@Model.Image" class="img-thumbnail" alt="Campaign Image" />
                </dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.User.Name)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CampaignId" />
                <button type="button" class="btn btn-danger me-2" onclick="confirmDelete()">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

<!-- Include CKEditor from CDN -->
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'), {
            toolbar: [],
        })
        .then(editor => {
            editor.isReadOnly = true; // Set CKEditor to read-only mode
        })
        .catch(error => {
            console.error(error);
        });

    function confirmDelete() {
        if (confirm("Are you sure you want to delete this campaign?")) {
            document.querySelector('form').submit();
        }
    }
</script>
